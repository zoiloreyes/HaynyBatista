@model IEnumerable<Compra>
@{
    ViewBag.Title = "Ordenes";
}

<div class="row">
    @Html.Partial("~/Views/Shared/_AdminMenu.cshtml")
    <div class="col-md-8 offset-md-1 bg-white p-4 rounded border-light">
        <table id="CitaTable" class="DataTable table-hover w-100">
            <thead>
                <tr>
                    <th>Usuario</th>
                    <th>Fecha</th>

                    <th>Total</th>
                    <th><i class="fa fa-eye"></i></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var compra in Model)
                {
                    <tr>
                        <td class="text-center Titulo">@compra.Usuario.Nombre @compra.Usuario.Apellido</td>
                        <td>@compra.FechaCreacion.ToString("dd/MM/yyyy dd:mmtt")</td>
                        <td>$RD@(compra.ItemsCompra.Sum(i => i.PrecioTotal))</td>
                        <td class="text-center"><a href="@Url.Action("Detalles","Compra",new { CompraID = compra.CompraID})" class="HaynyLink"><i class="fa fa-eye"></i></a></td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(() => {


        });

    </script>

}