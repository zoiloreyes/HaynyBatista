    <div class="container-fluid body-content pt-3">
        <div class="row">
            <div class="col-md-6 offset-md-3 my-5 RegisterFormContainer">
                @using (Html.BeginForm("ExternalLoginConfirmation", "Account", FormMethod.Post, new { @class = "form-horizontal RegisterForm", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="RegisterFormHeader p-2">

                        <h4 class="text-danger"><img class="img-fluid d-inline mr-3 rounded-circle" src="http://via.placeholder.com/50x50" />Vincula tu cuenta @ViewBag.LoginProvider</h4>
                    </div>
                    <p class="text-success">Has vinculado tu cuenta de <strong>@ViewBag.LoginProvider</strong>.
                    Introduce un nombre de usuario, telefono y unete.</p>
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-10 control-label" })
                        <div class="col-md-11 mx-2">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-md-10 control-label" })
                        <div class="col-md-11 mx-2">
                            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                        </div>
                    </div>
                    <p class="ml-3">Ya tienes cuenta? <a href="#" class="text-danger">Inicia Sesión</a></p>
                    <div class="d-flex justify-content-center">
                        <input type="submit" class="haynyBtn bg-danger text-white" style="min-width: 100px" value="Unete" />
                    </div>
                    <hr class="hr-text" data-content="O" />

                }

            </div>

        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/LayoutJs")
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $(".RegisterForm").addClass("animated fadeIn")
            $(".menu, footer").css("display", "none");
            $(".body-content").css("background", "linear-gradient(to left, #c0392b, #8e44ad)")
            $(".body-content").css("min-height", $(window).height() + "px");
        });
    </script>
</body>
</html>

